font pango:Fira Sans, FontAwesome5Free, FontAwesome5Brands 11

set $mod Mod4

set $terminal uxterm -e fish
set $browser firefox-developer-edition
set $editor leafpad
set $config "$HOME/.config/i3/config"
set $filebrowser uxterm -name ranger -e ranger

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+q kill
bindsym --release $mod+Shift+Q exec xkill

#colors setup
set $main_color #608b7d
set $white #F5FFF5
set $grey #555555
set $black #212121
set $urgent #64FFDA

set $bar_separator " "

