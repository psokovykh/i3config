bindsym $mod+KP_Add exec sh /home/dokel/.config/i3/otherscripts/volumeup.sh
bindsym $mod+KP_Subtract exec sh /home/dokel/.config/i3/otherscripts/volumedown.sh

#Autorun
exec $terminal
